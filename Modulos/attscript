#!/bin/bash

clear

fun_bar () {

comando[0]="$1"

comando[1]="$2"

 (

[[ -e $HOME/fim ]] && rm $HOME/fim

${comando[0]} > /dev/null 2>&1

${comando[1]} > /dev/null 2>&1

touch $HOME/fim

 ) > /dev/null 2>&1 &

 tput civis

echo -ne "   \033[1;33mPLEASE WAIT ... \033[1;37m- \033[1;33m["

while true; do

   for((i=0; i<18; i++)); do

   echo -ne "\033[1;31m#"

   sleep 0.1s

   done

   [[ -e $HOME/fim ]] && rm $HOME/fim && break

   echo -e "\033[1;33m]"

   sleep 1s

   tput cuu1

   tput dl1

   echo -ne "   \033[1;33mPLEASE WAIT ... \033[1;37m- \033[1;33m["

done

echo -e "\033[1;33m]\033[1;37m -\033[1;32m OK !\033[1;37m"

tput cnorm

}

echo " "

fun_atts () {

  [[ -e /home/versao ]] && rm /home/versao

  [[ -e /tmp/att ]] && rm /tmp/att

	wget -c -P /home https://raw.githubusercontent.com/januda-ui/DRAGON-VPS-MANAGER/main/Sistema/versao

	[[ -f "/home/versao" ]] && mv /home/versao /tmp/att

	[[ ! -e /bin/versao ]] && rm -rf /bin/menu

} > /dev/null 2>&1

echo -e "ã…¤ðŸ‰ã…¤DRAGON VPS MANAGERã…¤ðŸ‰ã…¤" | figlet

echo " "

echo -e "   \033[1;32mâ—‡ CHECKING FOR AVAILABLE UPDATES\033[0m\n"

fun_bar 'fun_atts'

[[ ! -f "/tmp/att" ]] && {

	echo -e "\n\033[1;31mâ—‡ ERROR CONNECTING TO SERVER\n"

	echo -ne "\033[1;31mâ—‡ ENTER \033[1;33mto return to \033[1;32mMENU!\033[0m"; read

	menu

}

echo " "

vrs1=$(sed -n '1 p' /bin/versao| sed -e 's/[^0-9]//ig')

vrs2=$(sed -n '1 p' /tmp/att | sed -e 's/[^0-9]//ig')

[[ "$vrs1" == "$vrs2" ]] && {

  echo -e " \033[1;36m   â—‡ THE SCRIPT IS NOW UPDATED!\033[1;32m\n"

  rm /tmp/att > /dev/null 2>&1

  echo -ne " \033[1;31mâ—‡ ENTER \033[1;33mto return to \033[1;32mMENU!\033[0m"; read

  menu

} || {

  echo -e "  \033[1;36mâ—‡ THERE IS A NEW UPDATE AVAILABLE!\033[1;33m\n"

  echo -e "  \033[1;32mâ—‡ UPDATE DETAILS:\033[0m\n"

  while read linha; do

    echo -e "  \033[1;37m- \033[1;33m$linha"

  done < "/tmp/att"

  echo " "

  echo -ne "  \033[1;32mâ—‡ WISH TO UPDATE \033[1;31m? \033[1;33m[s/n]:\033[1;37m "; read res

  if [[ "$res" = s || "$res" = S ]];then

    echo -e "\n\033[1;32mâ—‡ STARTING UPDATE..."

    sleep 3

    wget https://raw.githubusercontent.com/januda-ui/DRAGON-VPS-MANAGER/main/hehe > /dev/null 2>&1

    chmod +x hehe

    ./hehe

    clear

    echo -e "\033[1;32mâ—‡ SUCCESSFULLY UPDATED SCRIPT\033[0m\n"

    rm /tmp/att > /dev/null 2>&1

    echo -ne "\033[1;31mâ—‡ ENTER \033[1;33mto return to \033[1;32mMENU!\033[0m"; read

    menu

  else

    menu

  fi

}

